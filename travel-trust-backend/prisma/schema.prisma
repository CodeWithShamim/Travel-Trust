// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String         @id @default(uuid())
  username     String         @unique
  email        String         @unique
  password     String
  profileImage String
  contactNo    String
  role         ENUM_USER_ROLE @default(user)
  gender       String?
  age          Int?
  address      String?

  @@map("users")
}

model Service {
  id          String @id @default(uuid())
  name        String
  description String
  price       Int    @default(0)
  image       String

  @@map("services")
}

enum ENUM_USER_ROLE {
  user
  admin
  super_admin
}
